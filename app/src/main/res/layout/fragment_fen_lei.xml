<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FenLeiFragment">

    <LinearLayout
        android:id="@+id/lines1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/top_imgs1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/ewm" />

        <EditText
            android:id="@+id/top_edit"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="8"
            android:background="@drawable/search"
            android:hint="箱包超级品类日抢299减150券"
            android:paddingLeft="15dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/top_imgs2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="13sp"
            android:layout_weight="1"
            android:background="@drawable/xx" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sort_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/color_002" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sort_right"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="12sp"
            android:background="@color/color_001" />
    </LinearLayout>
</LinearLayout>